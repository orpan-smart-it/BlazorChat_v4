@using BlazorChat_v4.Shared
@page "/contacts"
@inject HttpClient Http
@inject ContactListBase ContactListBase
<h1>Contacts</h1>


<div class="col-12">
    @foreach (Contact contact in ContactListBase.ContactList)
    {
        <a href="/chat/@contact.ContactId" class="list-group-item list-group-item-action flex-column align-items-start"> @contact.FirstName<span> </span> @contact.LastName </a>
      }
</div>


